# Environment Variables Configuration for Azure App Service Deployment

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=support@yourdomain.com
FROM_EMAIL=noreply@yourdomain.com
NOTIFICATION_EMAIL=admin@yourdomain.com

# Keycloak Authentication
KEYCLOAK_CLIENT_ID=your_keycloak_client_id
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret
KEYCLOAK_ISSUER=https://your-keycloak-domain/realms/your-realm

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=https://your-app.azurewebsites.net

# Legacy Admin Password (fallback)
ADMIN_PASSWORD=your_secure_admin_password

# Azure Environment Variables (will be set by AZD)
AZURE_ENV_NAME=your_environment_name
AZURE_LOCATION=eastus2

# Optional: Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id
